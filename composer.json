{
    "name": "deliberry/${PROJECT_NAME}",
    "description": "${PROJECT_DESCRIPTION}",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Deliberry Team",
            "email": "it@deliberry.com"
        }
    ],
    "config": {
        "bin-dir": "bin",
        "vendor-dir": "lib"
    },
    "extra": {
        "incenteev-parameters": [
            {
                "dist-file": "etc/parameters.yml.dist",
                "file": "etc/config.d/parameters.yml"
            }
        ],
        "symfony-app-dir": "boot",
        "symfony-bin-dir": "bin",
        "symfony-test-dir": "tests",
        "symfony-var-dir": "var",
        "symfony-web-dir": "public"
    },
    "autoload": {
        "classmap": [ "Kernel.php" ],
        "psr-4": {}
    },
    "require": {
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/orm": "^2.5",
        "incenteev/composer-parameter-handler": "^2.1",
        "sensio/framework-extra-bundle": "^3.0",
        "simple-bus/doctrine-orm-bridge": "^4.0",
        "simple-bus/jms-serializer-bundle-bridge": "^2.0",
        "simple-bus/rabbitmq-bundle-bridge": "^3.1",
        "simple-bus/symfony-bridge": "^4.1",
        "symfony/framework-bundle": "^3.2",
        "symfony/monolog-bundle": "^3.1",
        "symfony/symfony": "^3.2",

        "php": ">= 7.1"
    },
    "require-dev": {
        "easycorp/easy-log-handler": "^1.0",

        "php": ">= 7.1"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    }
}
